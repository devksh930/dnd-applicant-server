# =============================================================================
# 필수 환경변수
# =============================================================================

# 데이터베이스 연결 정보
SPRING_DATASOURCE_URL="jdbc:mysql://localhost:3306/your_database_name"
SPRING_DATASOURCE_USERNAME="your_username"
SPRING_DATASOURCE_PASSWORD="your_password"

# JWT 설정
JWT_SECRET="your_jwt_secret_key_base64"

# 암호화 관련 정보
ENCRYPTION_TEXT_PASSWORD="your_encryption_password_hex"
ENCRYPTION_TEXT_SALT="your_encryption_salt_hex"
HMAC_TEXT="your_hmac_key_base64"

# GitHub API 설정 (지원서를 GitHub 이슈로 생성하기 위함)
GITHUB_TOKEN="your_github_personal_access_token"
GITHUB_REPOSITORY_OWNER="your_org_or_username"
GITHUB_REPOSITORY_NAME="your_repository_name"

# AWS S3 설정
AWS_S3_BUCKET="your_s3_bucket_name"
AWS_ACCESS_KEY="your_aws_access_key"
AWS_SECRET_KEY="your_aws_secret_key"

# =============================================================================
# 선택 환경변수 (기본값 있음)
# =============================================================================

# 서버 설정
SERVER_PORT=8080

# 데이터베이스 커넥션 풀
HIKARI_MAXIMUM_POOL_SIZE=3
HIKARI_MINIMUM_IDLE=1

# JPA 설정
JPA_DDL_AUTO=validate

# 로깅 레벨
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO

# JWT 쿠키 설정
JWT_COOKIE_SECURE=true
JWT_COOKIE_SAME_SITE=Lax
JWT_COOKIE_DOMAIN=

# AWS 리전
AWS_REGION=ap-northeast-2

# =============================================================================
# 사용법
# =============================================================================
# 1. 이 파일을 .env로 복사하세요: cp .env.example .env
# 2. 실제 값으로 placeholder들을 교체하세요
# 3. .env 파일은 절대 git에 커밋하지 마세요
#
# 프로파일별 설정:
# - dev: JWT_COOKIE_SECURE=true, JWT_COOKIE_SAME_SITE=None (Cross-Site 쿠키)
# - prod: JWT_COOKIE_SECURE=true, JWT_COOKIE_SAME_SITE=Lax, JWT_COOKIE_DOMAIN=.dnd.ac
